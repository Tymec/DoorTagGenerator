<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="App.MainWindow"
        Title="App">
    <!-- Two sections, left is preview and should take 70%, right is inputs and should take 30% -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Column="0"
            Grid.Row="0"
            Background="LightGray"
            Margin="10"
            CornerRadius="5"
        >
            <StackPanel 
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            >
                <TextBlock Text="Preview" />
            </StackPanel>
        </Border>
        <Border
            Grid.Column="1"
            Grid.Row="0"
            Background="LightGray"
            Margin="10"
            CornerRadius="5"
        >
            <StackPanel
                Orientation="Vertical"
                Margin="10"
                Spacing="10"
            >
                <TextBlock Text="Inputs" />
                <!-- Inputs: Room number, Room members, Logo URL -->
                <DockPanel>
                    <TextBox Watermark="Enter room number" />
                </DockPanel>
                <DockPanel>
                    <TextBox Watermark="Enter room members" />
                </DockPanel>
                <DockPanel>
                    <TextBox Watermark="Enter logo URL" />
                </DockPanel>
                <!-- Buttons: Save, Load, Print -->
                <UniformGrid Rows="1">
                    <Button Grid.Column="0" HorizontalAlignment="Left" Content="Save" />
                    <Button Grid.Column="1" HorizontalAlignment="Center" Content="Load" />
                    <Button Grid.Column="2" HorizontalAlignment="Right" Content="Print" />
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
