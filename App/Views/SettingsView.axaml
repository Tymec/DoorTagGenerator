<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:App.ViewModels"
             xmlns:views="using:App.Views"
             xmlns:controls="using:Avalonia.Themes.Neumorphism.Controls"
             xmlns:icons="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="550"
             x:Class="App.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
  <TabControl TabStripPlacement="Top" Height="NaN" Width="NaN" HorizontalAlignment="Stretch" Padding="0,0,10,0">
    <TabControl.Items>
      <TabItem Header="Document">
        <views:MainSettingsView DataContext="{Binding Main}" />
      </TabItem>
      <TabItem Header="Style">
        <views:StyleSettingsView DataContext="{Binding Style}" />
      </TabItem>
    </TabControl.Items>
  </TabControl>
</UserControl>